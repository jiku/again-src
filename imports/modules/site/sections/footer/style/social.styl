#footer div#social .btn-google-plus:hover > span
  background #dd4b39

/*YouTube*/

#footer div#social .btn-youtube:hover > i,
#footer div#social .btn-youtube:focus > i
  color #dd4b39

#footer div#social .btn-youtube:hover > span
  background #dd4b39

/*SoundCloud*/

#footer div#social .btn-soundcloud:hover > i,
#footer div#social .btn-soundcloud:focus > i
  color #ff7700

#footer div#social .btn-soundcloud:hover > span
  background #ff7700

/*LinkedIn*/

#footer div#social .btn-linkedin:hover > i,
#footer div#social .btn-linkedin:focus > i
  color #007bb6

#footer div#social .btn-linkedin:hover > span
  background #007bb6

/* Overrides above */

#footer div#social .btn:hover > i,
#footer div#social .btn:focus > i
  color #97f

#footer div#social .btn > span
  background #97f
  color #eee

#footer div#social .btn:hover > span,
#footer div#social .btn:focus > span
  background #eee
  color #000

#footer div#social .btn:hover > span:after,
#footer div#social .btn:focus > span:after
  border-color transparent transparent #eee transparent
