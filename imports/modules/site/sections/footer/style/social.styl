@import url(//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css)

footer.center
  top 87%

#footer div#social a.btn span
  font-family 'jikutypeVector'
  font-size 2px
  text-transform lowercase

#footer div#social .btn
  clear both
  white-space nowrap
  font-size .9em;
  display inline-block
  border-radius .6em
  box-shadow 0 1px 3px 0 rgba(0, 0, 0, .3)
  transition all .5s

#footer div#social .btn:hover
  box-shadow 0 5px 20px 0 rgba(0, 0, 0, 0.45)

#footer div#social .btn:focus
  box-shadow 0 3px 10px 0 rgba(0, 0, 0, 0.4)

#footer div#social .btn > span,
#footer div#social .btn-icon > i
  padding .3em 1.5em
#footer div#social .btn > span,
#footer div#social .btn > span:after,
#footer div#social .btn-icon > i
  transition all .5s

#footer div#social .btn > span
  padding 0px 4em
  white-space nowrap
  color #FFF
  background #b8b8b8
  display block
  position relative

#footer div#social .btn:hover > span
  background #b8b8b8

#footer div#social .btn:focus > span
  background #9a9a9a

#footer div#social .btn-icon > i
  position relative
  text-align center
  font-size 2em
  color #fff

#footer div#social .btn > span:after
  bottom 100%
	left 50%
	border 1.5em solid
	content ""
	position absolute
  border-color transparent transparent #97f transparent
	margin-left -1.5em

#footer div#social .btn-icon:hover > i,
#footer div#social .btn-icon:focus > i
  color #FFF

#footer div#social .btn-icon > span
  border-radius 0em 0em 4em 4em

/*Facebook*/

#footer div#social .btn-facebook:hover > i,
#footer div#social .btn-facebook:focus > i
  color #3b5998

#footer div#social .btn-facebook:hover > span
  background #3b5998

/*Twitter*/

#footer div#social .btn-twitter:hover > i,
#footer div#social .btn-twitter:focus > i
  color #55acee

#footer div#social .btn-twitter:hover > span
  background #55acee

