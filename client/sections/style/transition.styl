.invisible
  visibility hidden !important
  opacity 0 !important

.visible
  visibility visible !important
  opacity 1 !important

.fadein
  animation fadein 4s linear forwards

.fadeout
  animation fadeout 4s linear forwards

@keyframes fadeinout
  0%, 100%
    opacity 0
  50%
    opacity 1

@keyframes fadein
  0%
    opacity 0
  100%
    opacity 1

@keyframes fadeout
  0%
    opacity 1
  100%
    opacity 0
