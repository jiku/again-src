@import url(http://fonts.googleapis.com/css?family=Lato)

@font-face
  font-family jikutypePixel
  src:
    url('jikutype-001-Pixel.woff2') format('woff2'),
    url('jikutype-001-Pixel.woff') format('woff')

@font-face
  font-family jikutypeVector
  src:
    url('jikutype-001-Vector.woff2') format('woff2'),
    url('jikutype-001-Vector.woff') format('woff')

html, body
  margin 0
  padding 0
  width auto

// #container
//   width 100%

#container #static
  position fixed
  z-index 500
  width 100%
  height: 100%

sections
  position absolute
  z-index 1000
  color #fff
  width 100%
  display flex
  flex-direction column
  align-items center
  align-self center
  justify-content center

section
  /* width auto !important */ /* real browsers */
  min-width 80% /* real browsers */
  max-width 80%
  height auto !important /* real browsers */
  min-height 100% /* real browsers */

a
  text-decoration none

a, a:visited
  color #97f

a:hover, a:active, a.active
  color #eee

body
  background-color #000

// FOR CONTENT IN 100% CONTAINER
.center
  text-align center
  position relative
  top 50%
  transform translateY(-50%)

  cursor pointer

.invisible
  visibility hidden !important
  opacity 0 !important

.visible
  visibility visible !important
  opacity 1 !important

.fadein
  animation fadein 4s linear forwards

.fadeout
  animation fadeout 4s linear forwards

@keyframes fadeinout
  0%, 100%
    opacity 0
  50%
    opacity 1

@keyframes fadein
  0%
    opacity 0
  100%
    opacity 1

@keyframes fadeout
  0%
    opacity 1
  100%
    opacity 0

#header, h1, h2, h3, h4, h5, h6
  font-family 'jikutypeVector'

#header
  opacity .5
  font-size 2em
  color #fff

h1, h2, h3, h4, h5, h6
  font-size 4px
  color #fff

subheader, .box
  font-family 'Lato', 'Menlo', sans-serif
  font-size 1em
  color #bbb

sub
  color #999

.disable-scroll
  overflow hidden
  -webkit-scrollbar none

.disable-selection
  user-select none

.disable-clicks
  pointer-events none

.fullBox
  width 100vw !important
  min-width 100vw !important
  max-width 100vw !important
  height 100vh !important
  min-height 100vh !important
  max-height 100vh !important
  margin auto
  padding auto
  border 1px
  border-color #f00

.box
  margin 0 auto
  text-align center
  display block
  width 30%
  height auto
  padding .8em
  margin-bottom 24px
  opacity .5
  border 1pt solid #000
  /* background-color #ffffff */
  background -webkit-linear-gradient(bottom, #000, #000) /* I.e. not using it atm... */
  border-radius 8pt
  box-shadow rgba(223, 223, 223, .2) 1pt 1pt 1pt

// MARKDOWN STYLING

section > hr
  width 1%
  opacity .1

#pane
  position fixed
  z-index 0
  pointer-events: none

#particles
  position fixed
  z-index 200
  pointer-events none

#soundcloud
  position absolute
  z-index 300
