head
	title jiku - «Again»
body(class='disable-scroll')
	#container
		+Template.dynamic(template=layout)

template(name='layoutNormal')
	#static
		+Template.dynamic(template=pane)
		+Template.dynamic(template=particles)
	+Template.dynamic(template=sections)
	#staticFront
		+Template.dynamic(template=menu)

template(name='sections')
	sections
		section#header.fullBox.disable-selection
			+logo
		subsection.invisible.disable-clicks.disable-selection
			section#about.box
				+markdown
					{{>about}}
			section#player.box
				+markdown
					{{>player}}
				#player.react
					+React(component=Player)
			//- if isDev
			//- 	section#crappycrap.box
			//- 		+markdown
			//- 			{{>crappycrap}}
			section#contribute.box
				+markdown
					{{>contribute}}
		section#footer.fullBox
			+footer

template(name='logo')
	.center
		a(href="{{uri 'footer'}}") again

template(name='footer')
	.center
		#social.react
			+React(component=Social)

template(name='menu')
	menu.invisible.disable-clicks.disable-selection
		nav#bt-menu.bt-menu
			a.bt-menu-trigger
				span Menu
			ul
			ul
				li: a#header(href="{{uri 'header'}}"): i.fa.fa-arrow-up
				li: a#about(href="{{uri 'about'}}") about
				li: a#player(href="{{uri 'player'}}") player
				//- if isDev
					//- li: a#crappycrap(href="{{uri 'crappycrap'}}") crappycrap
				li: a#contribute(href="{{uri 'contribute'}}") contribute
				li: a#footer(href="{{uri 'footer'}}"): i.fa.fa-arrow-down

template(name='pane')
	#pane

template(name='particles')
	#particles
